{
  "name": "cwl-linter",
  "displayName": "CWL Linter",
  "description": "A linter for Common Workflow Language (CWL) files",
  "version": "0.0.4",
  "bin": {
    "cwl-linter": "./bin/cwl-linter.js"
  },
  "publisher": "cwl-linter",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/cwl-linter"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:cwl",
    "onLanguage:yaml"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cwl",
        "aliases": [
          "Common Workflow Language",
          "cwl"
        ],
        "extensions": [
          ".cwl"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "preferGlobal": true,
  "scripts": {
    "lint": "eslint .",
    "test": "node ./test/runTest.js",
    "postinstall": "node -e \"try { require('child_process').execSync('npm link', { stdio: 'inherit' }); } catch(e) { console.error('Failed to install CLI:', e); }\""
  },
  "dependencies": {
    "commander": "^14.0.0",
    "glob": "^8.1.0",
    "js-yaml": "^4.1.0"
  },
  "files": [
    "bin",
    "lib",
    "extension.js",
    "language-configuration.json"
  ],
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "eslint": "^8.0.0",
    "typescript": "^4.5.5"
  }
}
